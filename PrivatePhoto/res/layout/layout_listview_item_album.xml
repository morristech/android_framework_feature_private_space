<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView android:id="@+id/id_listview_item_album_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|left"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/thumbnail_border"
        android:padding="1dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_listview_item_album_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            android:paddingBottom="2dp"/>
        <TextView android:id="@+id/id_listview_item_album_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textSize="12dp"
            android:textColor="@color/listview_item_album_count"
            android:paddingTop="4dp"
            android:paddingLeft="1dp"/>
    </LinearLayout>>
    <ImageView
        android:id="@com.tpv:id/preference_image_next"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:gravity="end|center_vertical"
        android:layout_gravity="center_vertical|right"
        android:src="@*android:drawable/ic_find_next_mtrl_alpha"
        android:rotation="270"
        android:tint="@color/listview_item_rightarrow_tint"
        android:layout_margin="16dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>