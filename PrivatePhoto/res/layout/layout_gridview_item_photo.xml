<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_gridview_item_root"
    android:layout_width="80dp"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/id_gridview_item_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/thumbnail_border"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_photo"/>
    <ImageView
        android:id="@+id/id_gridview_item_video_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_switch_video"
        android:scaleType="fitCenter"
        android:padding="1dp"
        android:layout_gravity="left|bottom"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/grid_press_mask_selector"
        android:scaleType="fitCenter"/>
    <ImageView
        android:id="@+id/id_gridview_item_selected_hook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="top|right"
        android:src="@drawable/gallery_sel_01"
        android:scaleType="fitCenter"
        android:visibility="invisible"/>
</FrameLayout>